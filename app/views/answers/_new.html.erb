
<%= form_with( model: question.answers.new, url: question_answers_path(question.id) ) do |f| %>
  <div class="form-group">
    <%= f.label :body, 'Answer here' %>
    <%= f.text_area :body, class: "form-control", placeholder: "Enter your answer" %>
  </div>
  <div class="actions">
    <%= f.submit "Answer", class: "btn btn-primary" %>
  </div>
<% end %>